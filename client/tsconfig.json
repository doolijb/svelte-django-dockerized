{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "checkJs": true,
        "isolatedModules": true,
        "module": "ESNext",
        "paths": {
            "@app/*": [
                "./src/*"
            ],
            "@components": [
                "./src/components"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@constants": [
                "src/constants"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@data": [
                "src/data"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@decorators": [
                "src/components/.decorators"
            ],
            "@decorators/*": [
                "src/components/.decorators/*"
            ],
            "@interfaces": [
                "./src/interfaces"
            ],
            "@interfaces/*": [
                "./src/interfaces/*"
            ],
            "@stores": [
                "./src/stores"
            ],
            "@stores/*": [
                "./src/stores/*"
            ],
            "@themes": [
                "src/themes"
            ],
            "@themes/*": [
                "src/themes/*"
            ],
            "@validators": [
                "./src/validators"
            ],
            "@validators/*": [
                "./src/validators/*"
            ],
        },
        "resolveJsonModule": true,
        "target": "ESNext",
        "useDefineForClassFields": true
    },
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte",
        "src/components/fields/ValidationLegend"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
