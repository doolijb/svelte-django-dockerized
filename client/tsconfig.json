{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "checkJs": true,
        "isolatedModules": true,
        "module": "ESNext",
        "paths": {
            "@components": [
                "./src/components/index"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@constants": [
                "src/constants/index"
            ],
            "@decorators": [
                "src/components/.decorators/index"
            ],
            "@interfaces": [
                "./src/interfaces/index"
            ],
            "@interfaces/*": [
                "./src/interfaces/*"
            ],
            "@stores": [
                "./src/stores/index"
            ],
            "@stores/*": [
                "./src/stores/*"
            ],
            "@themes/*": [
                "src/themes/*"
            ],
            "@validators": [
                "./src/validators/index"
            ]
        },
        "resolveJsonModule": true,
        "target": "ESNext",
        "useDefineForClassFields": true
    },
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte",
        "src/components/fields/ValidationLegend"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
